{
  "id": "terraform-agent-prod",
  "name": "Production Terraform Agent",
  "type": "terraform",
  "enabled": true,
  "automation_level": "semi_auto",
  "thresholds": {
    "drift_check_interval": 300,
    "auto_apply_threshold": 0.8
  },
  "approval_required": true,
  "integrations": [
    {
      "name": "terraform",
      "type": "terraform",
      "enabled": true,
      "config": {
        "workspace_path": "/opt/terraform/workspaces/production",
        "backend_config": {
          "type": "s3",
          "bucket": "my-terraform-state",
          "key": "production/terraform.tfstate",
          "region": "us-west-2"
        },
        "model_path": "/opt/models/terraform_drift_model.joblib",
        "terraform_cloud": {
          "organization": "my-org",
          "workspace": "production-infrastructure",
          "token": "${TERRAFORM_CLOUD_TOKEN}"
        }
      }
    }
  ]
}