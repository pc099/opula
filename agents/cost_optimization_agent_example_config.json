{
  "id": "cost-optimization-agent-1",
  "name": "Cost Optimization Agent",
  "type": "cost_optimization",
  "enabled": true,
  "automation_level": "semi_auto",
  "thresholds": {
    "monitoring_interval": 3600,
    "optimization_threshold": 100.0,
    "auto_apply_threshold": 0.9,
    "utilization_threshold_low": 20.0,
    "utilization_threshold_high": 80.0
  },
  "approval_required": true,
  "integrations": [
    {
      "name": "cost_optimization",
      "type": "cost_optimization",
      "enabled": true,
      "config": {
        "providers": [
          {
            "name": "aws",
            "credentials": {
              "access_key_id": "${AWS_ACCESS_KEY_ID}",
              "secret_access_key": "${AWS_SECRET_ACCESS_KEY}",
              "region": "us-east-1"
            }
          },
          {
            "name": "azure",
            "credentials": {
              "subscription_id": "${AZURE_SUBSCRIPTION_ID}",
              "client_id": "${AZURE_CLIENT_ID}",
              "client_secret": "${AZURE_CLIENT_SECRET}",
              "tenant_id": "${AZURE_TENANT_ID}"
            }
          },
          {
            "name": "gcp",
            "credentials": {
              "project_id": "${GCP_PROJECT_ID}",
              "service_account_key": "${GCP_SERVICE_ACCOUNT_KEY}"
            }
          }
        ],
        "budget_limits": {
          "production": 20000.0,
          "development": 5000.0,
          "staging": 3000.0
        },
        "forecasting_model_path": "./models/cost_forecasting_model.joblib",
        "optimization_rules": {
          "right_sizing": {
            "enabled": true,
            "cpu_threshold": 20.0,
            "memory_threshold": 20.0,
            "min_savings": 50.0
          },
          "storage_optimization": {
            "enabled": true,
            "utilization_threshold": 30.0,
            "min_savings": 25.0
          },
          "resource_cleanup": {
            "enabled": true,
            "idle_threshold_hours": 168,
            "min_savings": 100.0
          },
          "reserved_instances": {
            "enabled": false,
            "utilization_threshold": 80.0,
            "commitment_months": 12
          }
        }
      }
    }
  ],
  "created_at": "2024-01-01T00:00:00Z",
  "updated_at": "2024-01-01T00:00:00Z"
}